<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="kia_xan.MainWindow"
        Title="MainWindow" Height="504" Width="924" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="224"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0" Grid.Row="4">
            <Label x:Name="ConnectionLabel" Content="" Background="Red" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" DockPanel.Dock="Top"/>
            <GroupBox Header="Телеметрия и питание" Height="176" DockPanel.Dock="Bottom"/>
            <GroupBox Header="Команды управления" Height="101">
                <StackPanel Margin="0">
                    <CheckBox x:Name="HSIControlCb" Content="Управление ВСИ" Margin="5" Click="HSIControlCb_Click"/>
                    <CheckBox Content="Данные о температуре" Margin="5"/>
                    <CheckBox Content="Данные о нагревателях" Margin="5"/>
                </StackPanel>
            </GroupBox>
            <DockPanel LastChildFill="True"/>
            <Label x:Name="TimeLabel" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="SpeedLabel" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button x:Name="AboutButton" Content="О программе"/>
            <Button x:Name="CloseButton" Content="Выход" Click="CloseButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="0">
            <Rectangle Fill="#FFF4F4F5" Height="36" Stroke="Black"/>
            <ListBox Height="395"/>
            <Rectangle Fill="#FFF4F4F5" Stroke="Black" Height="42"/>
        </StackPanel>
    </Grid>
</Window>
