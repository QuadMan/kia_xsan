<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="kia_xan.HSIWindow"
        Title="HSIWindow" Height="394.75" Width="1158" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <GroupBox Header="Имитатор БУК" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="160" Width="224">
            <StackPanel Margin="0">
                <ComboBox x:Name="BUKCmdChannelCbb" SelectedIndex="0" Margin="5" SelectionChanged="BUKCmdChannelCbb_SelectionChanged">
                    <ComboBoxItem Content="Команды по основнову каналу"/>
                    <ComboBoxItem Content="Команды по резервному каналу"/>
                </ComboBox>
                <ComboBox x:Name="BUKDataChannelCbb" SelectedIndex="0" Margin="5" SelectionChanged="BUKDataChannelCbb_SelectionChanged">
                    <ComboBoxItem Content="Данные отключены"/>
                    <ComboBoxItem Content="Данные по основному каналу"/>
                    <ComboBoxItem Content="Данные по резервному каналу"/>
                    <ComboBoxItem Content="Данные по всем каналам"/>
                </ComboBox>
                <CheckBox x:Name="BUKOnCb" Content="Включить" Margin="5" Click="BUKErrorRegisterCb_Click"/>
                <CheckBox x:Name="BUKErrorRegisterCb" Content="Регистрировать ошибки" Margin="5" Click="BUKErrorRegisterCb_Click"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Имитатор КВВ" HorizontalAlignment="Left" Margin="0,200,0,0" VerticalAlignment="Top" Height="160" Width="224">
            <StackPanel Margin="0">
                <ComboBox x:Name="KVVCmdChannelCbb" SelectedIndex="0" Margin="5" SelectionChanged="KVVCmdChannelCbb_SelectionChanged">
                    <ComboBoxItem Content="Команды отключены"/>
                    <ComboBoxItem Content="Команды по основному каналу"/>
                    <ComboBoxItem Content="Команды по резервному каналу"/>
                    <ComboBoxItem Content="Команды по обоим каналам"/>
                </ComboBox>
                <ComboBox x:Name="KVVDatChannelCbb" SelectedIndex="0" Margin="5" SelectionChanged="KVVDatChannelCbb_SelectionChanged">
                    <ComboBoxItem Content="Данные отключены"/>
                    <ComboBoxItem Content="Данные по основному каналу"/>
                    <ComboBoxItem Content="Данные по резервному каналу"/>
                    <ComboBoxItem Content="Данные по всем каналам"/>
                </ComboBox>
                <CheckBox x:Name="KVVReadyCb" Content="Готов" Margin="5" Click="KVVReadyCb_Click"/>
                <CheckBox x:Name="KVVBusyCb" Content="Занят" Margin="5" Click="KVVReadyCb_Click"/>
                <CheckBox x:Name="KVVMECb" Content="Ошибка сообщения" Margin="5" Click="KVVReadyCb_Click"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Данные от БУК" HorizontalAlignment="Left" Margin="229,10,0,0" VerticalAlignment="Top" Height="92" Width="557">
            <DataGrid x:Name="BUKGrid" ItemsSource="{Binding}" Margin="0" AutoGenerateColumns="False" ColumnWidth="100" IsReadOnly="True" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" ClipboardContentBinding="{x:Null}" Header="Канал" CanUserResize="False" Width="80" CanUserSort="False" CanUserReorder="False"/>
                    <DataGridTextColumn Binding="{Binding SRCnt}" ClipboardContentBinding="{x:Null}" Header="Запрос статус" CanUserResize="False" Width="90" CanUserSort="False" CanUserReorder="False"/>
                    <DataGridTextColumn Binding="{Binding DRCnt}" ClipboardContentBinding="{x:Null}" Header="Запрос данных" CanUserResize="False" Width="90" CanUserSort="False" CanUserReorder="False"/>
                    <DataGridTextColumn Binding="{Binding TimeStampCnt}" ClipboardContentBinding="{x:Null}" Header="Метка времени" CanUserResize="False" Width="90" CanUserSort="False" CanUserReorder="False"/>
                    <DataGridTextColumn Binding="{Binding ObtCnt}" ClipboardContentBinding="{x:Null}" Header="КБВ" CanUserResize="False" Width="90" CanUserSort="False" CanUserReorder="False"/>
                    <DataGridTextColumn Binding="{Binding UksCnt}" ClipboardContentBinding="{x:Null}" Header="УКС" CanUserResize="False" Width="90" CanUserSort="False" CanUserReorder="False"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <TextBox x:Name="UksStrTextBox" HorizontalAlignment="Left" Height="23" Margin="299,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381"/>
        <Label Content="УКС в КВВ" HorizontalAlignment="Left" Margin="229,139,0,0" VerticalAlignment="Top"/>
        <Button Content="Выдать" HorizontalAlignment="Left" Margin="699,142,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Очистить всю статистику" HorizontalAlignment="Left" Margin="993,332,0,0" VerticalAlignment="Top" Width="147" Height="23"/>
        <StackPanel HorizontalAlignment="Left" Height="154" Margin="791,10,0,0" VerticalAlignment="Top" Width="349">
            <Label Content="Полученные УКС" Background="#FFF5FD53"/>
            <ListBox x:Name="UKSListBox" ItemsSource="{Binding Path=uksList}" Height="132"/>
        </StackPanel>
        <GroupBox Header="Данные от КВВ" HorizontalAlignment="Left" Margin="229,200,0,0" VerticalAlignment="Top" Height="90" Width="916">
            <DataGrid x:Name="KVVGrid" Margin="0" ItemsSource="{Binding}" AutoGenerateColumns="False" ColumnWidth="100" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" ClipboardContentBinding="{x:Null}" Header="Канал" CanUserResize="False" Width="80"/>
                    <DataGridTextColumn Binding="{Binding FramesCnt}" ClipboardContentBinding="{x:Null}" Header="Кадров" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding StatusMECnt}" ClipboardContentBinding="{x:Null}" Header="Статус ME" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding StatusSRCnt}" ClipboardContentBinding="{x:Null}" Header="Статус SR" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding StatusBUSYCnt}" ClipboardContentBinding="{x:Null}" Header="Статус BUSY" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding StatusDataFramesCnt}" ClipboardContentBinding="{x:Null}" Header="Статус кадр" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding ErrInMarkerCnt}" ClipboardContentBinding="{x:Null}" Header="Ош. маркера" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding ErrInCRCCnt}" ClipboardContentBinding="{x:Null}" Header="Ош. CRC" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding ErrInStopBitCnt}" ClipboardContentBinding="{x:Null}" Header="Ош. StopBit" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding ErrInParityCnt}" ClipboardContentBinding="{x:Null}" Header="Ош. четности" CanUserResize="False" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</Window>
