<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="kia_xan.HSIWindow"
        Title="HSIWindow" Height="394.75" Width="1158" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <GroupBox Header="Имитатор БУК" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="160" Width="224">
            <StackPanel Margin="0">
                <ComboBox SelectedIndex="0" Margin="5">
                    <ComboBoxItem Content="Данные по основному каналу"/>
                    <ComboBoxItem Content="Данные по резервному каналу"/>
                </ComboBox>
                <ComboBox SelectedIndex="1" Margin="5">
                    <ComboBoxItem Content="Команды по основнову каналу"/>
                    <ComboBoxItem Content="Команды по резервному каналу"/>
                </ComboBox>
                <CheckBox Content="Включить" Margin="5" Checked="CheckBox_Checked"/>
                <CheckBox Content="Герцовая метка" Margin="5"/>
                <CheckBox Content="Код бортового времени" Margin="5"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Имитатор КВВ" HorizontalAlignment="Left" Margin="0,200,0,0" VerticalAlignment="Top" Height="160" Width="224">
            <StackPanel Margin="0">
                <ComboBox SelectedIndex="0" Margin="5">
                    <ComboBoxItem Content="Данные по основному каналу"/>
                    <ComboBoxItem Content="Данные по резервному каналу"/>
                </ComboBox>
                <ComboBox SelectedIndex="1" Margin="5">
                    <ComboBoxItem Content="Команды по основнову каналу"/>
                    <ComboBoxItem Content="Команды по резервному каналу"/>
                </ComboBox>
                <CheckBox x:Name="KVVOnCb" Content="Готов" Margin="5" Checked="CheckBox_Checked_1"/>
                <CheckBox Content="Занят" Margin="5"/>
                <CheckBox Content="Ошибка сообщения" Margin="5"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Данные от БУК" HorizontalAlignment="Left" Margin="229,10,0,0" VerticalAlignment="Top" Height="124" Width="545">
            <DataGrid x:Name="BUKGrid" ItemsSource="{Binding}" Margin="0" AutoGenerateColumns="False" ColumnWidth="100">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" ClipboardContentBinding="{x:Null}" Header="Канал" CanUserResize="False" Width="80"/>
                    <DataGridTextColumn Binding="{Binding FramesCnt}" ClipboardContentBinding="{x:Null}" Header="Запрос статус" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Запрос данных" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Метка времени" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="КБВ" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="УКС" CanUserResize="False" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="299,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381"/>
        <Label Content="УКС в КВВ" HorizontalAlignment="Left" Margin="229,139,0,0" VerticalAlignment="Top"/>
        <Button Content="Выдать" HorizontalAlignment="Left" Margin="699,142,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Очистить всю статистику" HorizontalAlignment="Left" Margin="993,332,0,0" VerticalAlignment="Top" Width="147" Height="23"/>
        <StackPanel HorizontalAlignment="Left" Height="154" Margin="779,10,0,0" VerticalAlignment="Top" Width="361">
            <Label Content="Полученные УКС" Background="#FFF5FD53"/>
            <ListBox Height="132"/>
        </StackPanel>
        <GroupBox Header="Данные от КВВ" HorizontalAlignment="Left" Margin="229,200,0,0" VerticalAlignment="Top" Height="124" Width="916">
            <DataGrid x:Name="KVVGrid" Margin="0" ItemsSource="{Binding}" AutoGenerateColumns="False" ColumnWidth="100">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" ClipboardContentBinding="{x:Null}" Header="Канал" CanUserResize="False" Width="80"/>
                    <DataGridTextColumn Binding="{Binding FramesCnt}" ClipboardContentBinding="{x:Null}" Header="Кадров" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding StatusMECnt}" ClipboardContentBinding="{x:Null}" Header="Статус ME" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding StatusSRCnt}" ClipboardContentBinding="{x:Null}" Header="Статус SR" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding StatusBUSYCnt}" ClipboardContentBinding="{x:Null}" Header="Статус BUSY" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding StatusDataFramesCnt}" ClipboardContentBinding="{x:Null}" Header="Статус кадр" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding ErrInMarkerCnt}" ClipboardContentBinding="{x:Null}" Header="Ош. маркера" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding ErrInCRCCnt}" ClipboardContentBinding="{x:Null}" Header="Ош. CRC" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding ErrInStopBitCnt}" ClipboardContentBinding="{x:Null}" Header="Ош. StopBit" CanUserResize="False" Width="90"/>
                    <DataGridTextColumn Binding="{Binding ErrInParityCnt}" ClipboardContentBinding="{x:Null}" Header="Ош. четности" CanUserResize="False" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</Window>
